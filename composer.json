{
    "name": "davidyell/cricketeer",
    "description": "A CakePHP 3 application for managing Cricket matches",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=5.4.16",
        "cakephp/cakephp": "~3.0",
        "cakephp/migrations": "~1.1",
        "mobiledetect/mobiledetectlib": "2.*",
        "cakephp/debug_kit": "~3.1",
        "davidyell/numbers_to_words": "0.0.2",
        "davidyell/proffer": "~0.4",
        "mustache/mustache": "2.*",
        "friendsofcake/bootstrap-ui": "~0.3"
    },
    "require-dev": {
        "d11wtq/boris": "1.0.*",
        "phpunit/phpunit": "*",
        "squizlabs/php_codesniffer": "~2.3",
        "cakephp/bake": "dev-master"
    },
    "suggest": {
        "phpunit/phpunit": "Allows automated tests to be run without system-wide install.",
        "cakephp/cakephp-codesniffer": "Allows to check the code against the coding standards used in CakePHP."
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests",
            "Cake\\Test\\Fixture\\": "./vendor/cakephp/cakephp/tests/Fixture"
        }
    },
    "scripts": {
        "post-install-cmd": "App\\Console\\Installer::postInstall",
        "post-autoload-dump": "Cake\\Composer\\Installer\\PluginInstaller::postAutoloadDump"
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
